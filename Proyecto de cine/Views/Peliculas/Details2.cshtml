@model Proyecto_de_cine.Data.Pelicula

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Pelicula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombrePelicula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombrePelicula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneroPelicula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneroPelicula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Img)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Img" alt="@Model.NombrePelicula" class="img-fluid" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PeliculaId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>