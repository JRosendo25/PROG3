@model IEnumerable<Proyecto_de_cine.Data.Pelicula>

@{
    ViewData["Title"] = "Lista de peliculas";
}

<h1>Lista de peliculas</h1>

<p> Este es un listado de las peliculas que tenemos disponibles</p>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@item.Img" class="card-img-top" alt="@item.NombrePelicula">
                <div class="card-body">
                    <h5 class="card-title">@item.NombrePelicula</h5>
                    <p class="card-text">@item.GeneroPelicula</p>
                    <a asp-action="Edit" asp-route-id="@item.PeliculaId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.PeliculaId" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.PeliculaId" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>